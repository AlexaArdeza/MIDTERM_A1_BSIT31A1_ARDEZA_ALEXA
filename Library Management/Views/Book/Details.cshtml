@model Library_Management.Models.BookListViewModel

<div class="modal-header bg-primary text-white">
    <h5 class="modal-title">@Model.Title</h5>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>

<div class="modal-body">
    <div class="row g-4">
        <!-- Cover Image -->
        <div class="col-md-4 text-center">
            <img src="@Model.CoverImageUrl"
                 class="img-fluid rounded shadow-sm"
                 alt="@Model.Title"
                 style="max-height: 300px; object-fit: cover;">
        </div>

        <!-- Details -->
        <div class="col-md-8">
            <dl class="row mb-0">
                <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(m => m.ISBN)</dt>
                <dd class="col-sm-8">@Model.ISBN</dd>

                <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(m => m.AuthorName)</dt>
                <dd class="col-sm-8 d-flex align-items-center">
                    @Model.AuthorName
                    @if (!string.IsNullOrEmpty(Model.AuthorProfileImageUrl))
                    {
                        <img src="@Model.AuthorProfileImageUrl"
                             class="rounded-circle ms-2"
                             style="width: 30px; height: 30px; object-fit: cover;"
                             alt="Author Profile">
                    }
                </dd>

                <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(m => m.Genre)</dt>
                <dd class="col-sm-8">@Model.Genre</dd>

                <dt class="col-sm-4 fw-semibold">@Html.DisplayNameFor(m => m.PublishedDate)</dt>
                <dd class="col-sm-8">@Model.PublishedDate?.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-4 fw-semibold">Available Copies</dt>
                <dd class="col-sm-8">@Model.AvailableCopies / @Model.TotalCopies</dd>
            </dl>

            <hr />

            <h6 class="fw-semibold">@Html.DisplayNameFor(m => m.Description)</h6>
            <p class="mb-0">@Model.Description</p>
        </div>
    </div>
</div>

<div class="modal-footer">
    <a asp-action="Index" asp-route-id="@Model.BookId" class="btn btn-outline-primary">
        <i class="bi bi-arrow-left"></i> Close
    </a>

    <!-- Manage Copies button -->
    <a href="javascript:void(0);"
       class="btn btn-primary"
       onclick="openAddCopyModal('@Model.BookId')">
        <i class="bi bi-pencil-square"></i> Manage Copies
    </a>
</div>

@section Scripts {
    <script>
        // Open Add Copy modal
        function openAddCopyModal(bookId) {
            fetch(`/Book/AddCopyModal?bookId=${encodeURIComponent(bookId)}`)
                .then(response => {
                    if (!response.ok) throw new Error('Failed to load Add Copy form.');
                    return response.text();
                })
                .then(html => {
                    document.querySelector('#exampleModal .modal-content').innerHTML = html;
                    let modal = new bootstrap.Modal(document.getElementById('exampleModal'));
                    modal.show();

                    // Bind submit event after modal content is loaded
                    const form = document.getElementById('addBookCopyForm');
                    if (form) {
                        form.addEventListener('submit', function (e) {
                            e.preventDefault();
                            const formData = new FormData(form);

                            fetch(form.action, {
                                method: 'POST',
                                body: new URLSearchParams(formData)
                            })
                            .then(resp => {
                                if (!resp.ok) throw new Error('Failed to add copy.');
                                modal.hide();
                                location.reload(); // refresh to show updated copies
                            })
                            .catch(err => alert(err.message));
                        });
                    }
                })
                .catch(err => console.error(err));
        }
    </script>
}
